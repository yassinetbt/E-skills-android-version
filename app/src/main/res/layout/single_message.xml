<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/message_profile_image_cardview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:elevation="12dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            app:cardCornerRadius="40dp">

            <ImageView
                android:id="@+id/message_profile_image"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_toStartOf="@id/message_profile_time"
            android:layout_toEndOf="@id/message_profile_image_cardview"
            android:fontFamily="@font/jost_medium"
            android:letterSpacing="0.04"
            android:maxLines="1"
            android:text="Hello this is a long text message to test the layout of messaging "
            android:textColor="@color/textgraycolor"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/message_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/message_profile_image_cardview"
            android:fontFamily="@font/jost_medium"
            android:letterSpacing="0.04"
            android:text="Mohamed Amin Ben Arfa"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/message_profile_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/jost_medium"
            android:letterSpacing="0.04"
            android:text="1h ago"
            android:textColor="@color/textgraycolor"
            android:textSize="12sp"
            android:textStyle="normal" />
    </RelativeLayout>

</RelativeLayout>