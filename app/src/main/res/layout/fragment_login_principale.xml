<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@android:color/transparent"
    android:fitsSystemWindows="true"
    tools:context=".Views.Fragments.LoginPrincipaleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="25dp"
            android:paddingEnd="25dp">

            <TextView
                android:id="@+id/welcome_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/jost_bold"
                android:gravity="center_horizontal"
                android:letterSpacing="0.06"
                android:maxLines="1"
                android:text="@string/welcome"
                android:textAlignment="center"
                android:textColor="@color/textcolor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/jost_regular"
                android:letterSpacing="0.06"
                android:maxLines="3"
                android:minLines="2"
                android:text="E-skills.io is a modern e-learning platform that gather all IT technologies in one place. â€¨With E-skills you will learn by practicing and being moderated with mentors all the time. We offer an interactive platform where you can learn, chat with others members and  mentor in real time, ask question, attend live workshops and publish,look for solution in the internal forum. "
                android:textColor="@color/textcolor"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/login_principale_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/button"
                android:fontFamily="@font/jost_bold"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:shadowColor="#51000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:text="@string/login"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="1sp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/connectwith"
                    android:gravity="center"
                    android:orientation="horizontal"></LinearLayout>

                <TextView
                    android:id="@+id/connect_with"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/jost_regular"
                    android:text="@string/or_connect_with"
                    android:textAlignment="center"
                    android:textColor="@color/connectwith"
                    android:textSize="12sp"
                    app:autoSizeTextType="uniform" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="1sp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/connectwith"
                    android:orientation="horizontal">

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <RelativeLayout
                    android:id="@+id/facebook_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/btnfacebook"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/img_logo_facebook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:src="@drawable/facebook_3" />

                        <TextView
                            android:id="@+id/txt_facebook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/img_logo_facebook"
                            android:fontFamily="@font/jostsemibold"
                            android:text="Facebook"
                            android:textColor="@color/facebook"
                            android:textSize="14sp"
                            app:autoSizeTextType="uniform" />
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/google_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/btngoogle"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/img_logo_google"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:src="@drawable/google_symbol" />

                        <TextView
                            android:id="@+id/txt_google"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/img_logo_google"
                            android:fontFamily="@font/jostsemibold"
                            android:text="Google"
                            android:textColor="@color/facebook"
                            android:textSize="14sp"
                            app:autoSizeTextType="uniform" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/restore_purchase"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/jost_regular"
                        android:maxLines="1"
                        android:text="@string/restore_purchase"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ask_for_account"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/jost_regular"
                        android:maxLines="1"
                        android:text="@string/ask_for_account"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</FrameLayout>