<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundcolor"
    tools:context=".Views.Fragments.DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_top_home"
            android:backgroundTint="@color/dashboardpurple"
            android:orientation="vertical"
            android:paddingStart="25dp"
            android:paddingTop="10dp"
            android:paddingEnd="25dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/jost_semi_bold"
                        android:maxLines="1"
                        android:text="@string/welcome_back_mentornations"
                        android:textColor="@color/white"
                        android:textSize="16sp"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/jost_semi_bold"
                        android:minLines="2"
                        android:text="@string/e_skills_is_the_passport_to_the_future_so_learn_more_and_more"
                        android:textColor="@color/white"
                        android:textSize="14sp"></TextView>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.1"
                    android:src="@drawable/ic_flash" />

            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/quizButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="1dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/quizcardcolor"
                        android:divider="@android:color/transparent"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"


                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="5dp"
                                android:src="@drawable/ic_shape" />

                            <TextView
                                android:id="@+id/quizscore"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/jost_medium"
                                android:text="0%"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                app:autoSizeTextType="uniform" />

                            <TextView
                                android:id="@+id/quiz"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/jost_medium"
                                android:text="@string/quiz"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                app:autoSizeTextType="uniform" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/expButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/expcardcolor"
                        android:divider="@android:color/transparent"
                        android:elevation="8dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="5dp"
                                android:src="@drawable/ic_achievement" />

                            <TextView
                                android:id="@+id/expscore"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/jost_medium"
                                android:text="0 Exp"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                app:autoSizeTextType="uniform" />

                            <TextView
                                android:id="@+id/exp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/jost_medium"
                                android:text="@string/acheiv"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                app:autoSizeTextType="uniform" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/lecturesButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/lecturescardcolor"
                        android:divider="@android:color/transparent"
                        android:elevation="8dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="5dp"
                                android:src="@drawable/ic_lectures" />

                            <TextView
                                android:id="@+id/lecturesscore"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/jost_medium"
                                android:text="0%"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                app:autoSizeTextType="uniform" />

                            <TextView
                                android:id="@+id/lectures"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/jost_medium"
                                android:text="@string/lectures"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                app:autoSizeTextType="uniform" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/projectButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/projectscardcolor"
                        android:divider="@android:color/transparent"
                        android:elevation="8dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/git"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="5dp"
                                android:src="@drawable/ic_rocket_1" />

                            <TextView
                                android:id="@+id/projectsscore"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/jost_medium"
                                android:text="0"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                app:autoSizeTextType="uniform" />

                            <TextView
                                android:id="@+id/projects"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/jost_medium"
                                android:text="@string/projects"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                app:autoSizeTextType="uniform" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/coursesText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_weight="3"
                        android:fontFamily="@font/jost_bold"
                        android:text="@string/your_courses"
                        android:textColor="@color/black" />

                    <ImageView
                        android:id="@+id/my_courses"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/arrow_shape"
                        android:paddingLeft="6dp"
                        android:paddingTop="6dp"
                        android:paddingRight="6dp"
                        android:paddingBottom="6dp"
                        android:src="@drawable/ic_arrow" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/firstcourse"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:divider="@android:color/transparent"
                        android:elevation="8dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/course_first_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/cours2"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradient_purple"
                                    android:orientation="vertical"
                                    android:paddingStart="10dp"
                                    android:paddingTop="15dp"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="15dp"
                                    android:weightSum="2">

                                    <TextView
                                        android:id="@+id/course_first_title"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/jost_bold"
                                        android:minLines="2"
                                        android:text="Presentation Skills"
                                        android:textColor="@color/white"
                                        android:textSize="20sp" />

                                    <TextView
                                        android:id="@+id/course_first_about"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/jost_regular"
                                        android:minLines="2"
                                        android:text="you get to learn MongoDB (Atlas), Express.JS, Angular 8 and NodeJS. This group of technologies, combine ..."
                                        android:textColor="@color/white"
                                        android:textSize="11sp" />
                                </LinearLayout>


                            </LinearLayout>

                            <TextView
                                android:id="@+id/continue1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/jost_bold"
                                android:text="@string/continuee"
                                android:textAlignment="center"
                                android:textColor="@color/dashboardpurple"

                                android:textSize="14dp" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/secondcourse"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:divider="@android:color/transparent"
                        android:elevation="8dp"
                        app:cardCornerRadius="10dp"

                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/course_second_image"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/cours2"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradient_purple"
                                    android:orientation="vertical"
                                    android:paddingStart="10dp"
                                    android:paddingTop="15dp"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="15dp"
                                    android:weightSum="2">

                                    <TextView
                                        android:id="@+id/course_second_title"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/jost_bold"
                                        android:minLines="2"
                                        android:text="Presentation Skills"
                                        android:textColor="@color/white"
                                        android:textSize="20sp" />

                                    <TextView
                                        android:id="@+id/course_second_about"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/jost_regular"
                                        android:minLines="2"
                                        android:text="you get to learn MongoDB (Atlas), Express.JS, Angular 8 and NodeJS. This group of technologies, combine ..."
                                        android:textColor="@color/white"
                                        android:textSize="11sp" />
                                </LinearLayout>


                            </LinearLayout>

                            <TextView
                                android:id="@+id/continue2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/jost_bold"
                                android:text="@string/continuee"
                                android:textAlignment="center"
                                android:textColor="@color/dashboardpurple"

                                android:textSize="14dp" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/recomondedText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_weight="3"
                        android:fontFamily="@font/jost_bold"
                        android:text="@string/recemonded_for_you"
                        android:textColor="@color/black" />

                    <ImageView
                        android:id="@+id/my_recemonded"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/arrow_shape"
                        android:paddingLeft="6dp"
                        android:paddingTop="6dp"
                        android:paddingRight="6dp"
                        android:paddingBottom="6dp"
                        android:src="@drawable/ic_arrow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/firstrecommand"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:divider="@android:color/transparent"
                        android:elevation="8dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/cours1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradient_black_course"
                                    android:orientation="vertical"
                                    android:paddingStart="10dp"
                                    android:paddingTop="15dp"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="15dp"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/jost_bold"
                                        android:text="Web Application"
                                        android:textColor="@color/white"
                                        android:textSize="20sp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="15dp"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:weightSum="3">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1">

                                            <ImageView
                                                android:id="@+id/videos"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:src="@drawable/ic_videos" />

                                            <TextView
                                                android:id="@+id/vidosText"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="7dp"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/jost_medium"
                                                android:text="24 videos"
                                                android:textColor="@color/white"
                                                android:textSize="11sp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:layout_weight="1">

                                            <ImageView
                                                android:id="@+id/project"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:src="@drawable/ic_white_rocket" />

                                            <TextView
                                                android:id="@+id/projectText"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="7dp"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/jost_medium"
                                                android:text="2 projects"
                                                android:textColor="@color/white"
                                                android:textSize="11sp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:layout_weight="1">

                                            <ImageView
                                                android:id="@+id/saved"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:src="@drawable/ic_saved" />

                                            <TextView
                                                android:id="@+id/savedText"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="7dp"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/jost_medium"
                                                android:text="10 saved"
                                                android:textColor="@color/white"
                                                android:textSize="11sp" />
                                        </LinearLayout>

                                    </LinearLayout>
                                </LinearLayout>


                            </LinearLayout>

                            <TextView
                                android:id="@+id/buynow1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/jost_bold"
                                android:text="@string/buy_now"
                                android:textAlignment="center"
                                android:textColor="@color/buynowcolor"

                                android:textSize="14dp" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/secondrecommand"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:divider="@android:color/transparent"
                        android:elevation="8dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/cours1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradient_black_course"
                                    android:orientation="vertical"
                                    android:paddingStart="10dp"
                                    android:paddingTop="15dp"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="15dp"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/jost_bold"
                                        android:text="Advanced Raspberry Pi4"
                                        android:textColor="@color/white"
                                        android:textSize="20sp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="15dp"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:weightSum="3">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1">

                                            <ImageView
                                                android:id="@+id/videos2"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:src="@drawable/ic_videos" />

                                            <TextView
                                                android:id="@+id/vidosText2"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="7dp"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/jost_medium"
                                                android:text="24 videos"
                                                android:textColor="@color/white"
                                                android:textSize="11sp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
