<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    tools:context=".Views.Fragments.AnswerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:paddingTop="15dp"
        android:paddingEnd="25dp"
        android:paddingBottom="15dp"
        android:weightSum="10">

        <EditText
            android:id="@+id/answer_content_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="3"
            android:background="@drawable/input_question_text"
            android:ems="10"
            android:fontFamily="@font/jost_medium"
            android:hint="     Content Text"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            android:shadowColor="#51000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/answer_content_code"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="3"
            android:background="@drawable/input_question_text"
            android:ems="10"
            android:fontFamily="@font/jost_medium"
            android:hint="     Content Code"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            android:shadowColor="#51000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />

        <TextView
            android:id="@+id/add_answer_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity=""
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/post_question_button"
            android:fontFamily="@font/jost_bold"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:shadowColor="#51000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:text="Post your answer"
            android:textColor="@color/white" />


    </LinearLayout>
</FrameLayout>